{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  /* tailwind.config.js */
  "theme": {
    "extend": {
      "fontSize": {
        "responsive-sm": "clamp(0.7rem, 1vw, 0.9rem)",
        "responsive-md": "clamp(0.9rem, 1.5vw, 1.2rem)",
        "responsive-lg": "clamp(1.2rem, 2.5vw, 2.5rem)",
        "responsive-xl": "clamp(1.5rem, 3vw, 3rem)",
        "responsive-2xl": "clamp(1.8rem, 4vw, 3.5rem)",
        "responsive-3xl": "clamp(2.2rem, 5vw, 4rem)",
        "responsive-4xl": "clamp(2.5rem, 6vw, 4.5rem)",
        "responsive-5xl": "clamp(3rem, 7vw, 5rem)",
        "responsive-6xl": "clamp(3.5rem, 8vw, 6rem)",
        "responsive-7xl": "clamp(4rem, 9vw, 7rem)",
        "responsive-8xl": "clamp(4.5rem, 10vw, 8rem)",
        "responsive-9xl": "clamp(5rem, 11vw, 9rem)",
        "responsive-10xl": "clamp(5.5rem, 12vw, 10rem)"
      },
  }
}

}
